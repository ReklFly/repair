
<view class="container"> 

 <view class="login-icon"> 

 <image class="login-img" src="cloud://wtf-qw2i7.7774-wtf-qw2i7-1301635625/cloudImg/kt.png"></image> 

 </view>

 <view class="login-from"> 

  

 <!--手机号-->

 <view class="inputView"> 

  <image class="nameImage" src="cloud://wtf-qw2i7.7774-wtf-qw2i7-1301635625/cloudImg/phone.png"></image> 

  <label class="loginLab">手机号/账号</label> 

  <input class="inputText" placeholder="请输入手机号/账号" bindinput="phoneInput" value="{{account}}"/> 

 </view> 

 <view class="line"></view> 

  

 <!--密码-->

 <view class="inputView"> 

  <image class="keyImage" src="cloud://wtf-qw2i7.7774-wtf-qw2i7-1301635625/cloudImg/pwd.png"></image> 

  <label class="loginLab">密码</label> 

  <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 

 </view> 

  

 <!--按钮-->

 <view class="loginBtnView"> 

  <button class="loginBtn"  size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button> 

 </view> 

  <view class="registerBtnView"> 

  <button class="registerBtn"  size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="register">注册</button> 

 </view> 

 </view> 

</view>
