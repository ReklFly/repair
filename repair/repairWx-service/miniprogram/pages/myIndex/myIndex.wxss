/* pages/myIndex/myIndex.wxss */
.menu {
  float: left;
  width: 100%;
  height: 90rpx;
  border-right: 2rpx solid #ddd;
  white-space: nowrap;
}
.menu-nav {
  width: 100%;
  height: 100%;
}

.menu-nav .item {
  position: relative;
  display: inline-block;
  font-size: 30rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
}

.menu-nav .item.active::before {
  position: absolute;
  bottom: 0;
  left: 0;
  content: "";
  display: block;
  width: 100%;
  height: 6rpx;
  background: #c44943;
}
.clearfix {
  clear: both;
}
.nav {
  width: 100%;
  border-bottom: 2rpx solid #ddd;
}

.content {
  width: 100%;
  background: #fff;
}

.content-new {
  display: flex;
  width: 100%;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e0e0e0;
}

.new-left {
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 2;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.new-left .title {
  padding-top: 5rpx;
  font-size: 36rpx;
  padding-bottom: 10rpx;
}

.new-left .refer {
  font-size: 24rpx;
  color: #acacac;
}

.new-right {
  flex: 1;
}

.new-right .new-right-Img {
  width: 100%;
  height: 79px;
  vertical-align: middle;
}